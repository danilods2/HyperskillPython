water = 400
milk = 540
beans = 120
cups = 9
cash = 550

status = """
The coffee machine has:

{} of water
{} of milk
{} of coffee beans
{} of disposable cups
{} of money
""".format(water, milk, beans, cups, cash)

def starter(x):  # takes commands
    global water
    global milk
    global cups
    global beans
    global cash
    if x == "buy":
        buy()
    elif x == "fill":
        water += int(input("Write how many ml of water do you want to add:\n"))
        milk += int(input("Write how many ml of milk do you want to add:\n"))
        beans += int(input("Write how many grams of coffee beans do you want to add:\n"))
        cups += int(input("Write how many disposable cups do you want to add:\n"))
    elif x == "take":
        print("I gave you {} euros".format(cash))
        cash = 0
        print(cash)


def buy():
    x = int(input("What do you want to buy? \n1 - espresso\n2 - latte\n3 - cappuccino\n"))
    global water
    global milk
    global cups
    global beans
    global cash
    cups -= 1
    if x == 1:
        water -= 250
        beans -= 16
        cash += 4
    elif x == 2:
        water -= 350
        milk -= 75
        beans -= 20
        cash += 7
    elif x == 3:
        water -= 200
        milk -= 100
        beans -= 12
        cash += 6
    print("There you go. Enjoy your coffee!")

print(status)
starter(input("Write action (buy, fill, take):\n"))
print(status)
